<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_dark" />
        </shape>
    </item>

    <!-- Top-left gradient blob (Primary) - Điều chỉnh vị trí cân đối hơn -->
    <item
        android:top="-80dp"
        android:left="-120dp"
        android:width="450dp"
        android:height="350dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="225dp"
                android:centerColor="#266366f1"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Top-right gradient blob - THÊM MỚI để cân bằng -->
    <item
        android:top="-60dp"
        android:right="-100dp"
        android:width="380dp"
        android:height="320dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="190dp"
                android:centerColor="#1A6366f1"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Middle-left gradient blob -->
    <item
        android:top="280dp"
        android:left="-100dp"
        android:width="350dp"
        android:height="300dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="175dp"
                android:centerColor="#1A6366f1"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Middle-right ambient glow - Điều chỉnh để phân bố đều hơn -->
    <item
        android:top="220dp"
        android:right="-60dp"
        android:width="340dp"
        android:height="290dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="170dp"
                android:centerColor="#0D6366f1"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Bottom-left gradient blob (Secondary) -->
    <item
        android:bottom="-60dp"
        android:left="-80dp"
        android:width="380dp"
        android:height="320dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="190dp"
                android:centerColor="#1Da855f7"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Bottom-right gradient blob (Secondary) -->
    <item
        android:bottom="-80dp"
        android:right="-100dp"
        android:width="400dp"
        android:height="340dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="200dp"
                android:centerColor="#1Aa855f7"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Center subtle glow - THÊM MỚI để không còn vùng trống -->
    <item
        android:top="400dp"
        android:left="80dp"
        android:width="280dp"
        android:height="250dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="140dp"
                android:centerColor="#0Da855f7"
                android:endColor="#00000000" />
        </shape>
    </item>
</layer-list>